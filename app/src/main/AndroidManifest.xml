<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.refrotech">

    <!-- Internet for Firebase -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RefroTech"
        tools:targetApi="31">

        <!-- ========================================================= -->
        <!-- CUSTOMER SIDE (MAIN ENTRY POINT) -->
        <!-- ========================================================= -->

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".DashboardCustomer"
            android:exported="false" />

        <activity
            android:name=".CustomerHistory"
            android:exported="false" />

        <activity
            android:name=".Register"
            android:exported="false" />


        <!-- ========================================================= -->
        <!-- EMPLOYEE LOGIN (LEADER + TECHNICIAN) -->
        <!-- ========================================================= -->

        <activity
            android:name=".EmployeeLogin"
            android:exported="false" />


        <!-- ========================================================= -->
        <!-- LEADER MODULE -->
        <!-- ========================================================= -->

        <activity
            android:name=".LeaderDashboard"
            android:exported="false" />

        <activity
            android:name=".LeaderConfirmationActivity"
            android:exported="false" />

        <activity
            android:name=".LeaderNewRequestDetailActivity"
            android:exported="false" />

        <activity
            android:name=".LeaderRescheduleDetailActivity"
            android:exported="false" />

        <activity
            android:name=".AddSchedulePage"
            android:exported="false" />

        <activity
            android:name=".EditSchedulePage"
            android:exported="false" />

        <activity
            android:name=".EditCustomerRequest"
            android:exported="false" />


        <!-- ========================================================= -->
        <!-- TECHNICIAN MODULE -->
        <!-- ========================================================= -->

        <activity
            android:name=".TechnicianDashboard"
            android:exported="false" />

        <activity
            android:name=".TechnicianHistory"
            android:exported="false" />

        <activity
            android:name=".TechnicianJobDetail"
            android:exported="false" />

        <activity
            android:name=".TechnicianManagement"
            android:exported="false" />

    </application>

</manifest>
