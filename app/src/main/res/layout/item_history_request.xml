<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:padding="12dp"
    android:layout_marginBottom="10dp"
    android:elevation="4dp">

    <TextView
        android:id="@+id/tvRequestAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alamat: Jl. Contoh No.1"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_bold" />

    <TextView
        android:id="@+id/tvRequestDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tanggal: 01/01/2025"
        android:textSize="14sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tvRequestTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jam: 10:00"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp" />

    <!-- STATUS BADGE -->
    <TextView
        android:id="@+id/tvRequestStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pending"
        android:background="#FFE082"
    android:textColor="@color/black"
    android:paddingHorizontal="12dp"
    android:paddingVertical="4dp"
    android:fontFamily="@font/inter_bold"
    android:layout_marginBottom="8dp"
    android:layout_gravity="start"
    android:radius="8dp" />

    <!-- ACTION BUTTONS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Batalkan"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:backgroundTint="#E53935"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnChangeSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ubah Jadwal"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:backgroundTint="#43A047" />
    </LinearLayout>

</LinearLayout>
