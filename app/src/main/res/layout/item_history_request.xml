<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemHistoryRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/dialog_background"
    android:layout_marginBottom="10dp">

    <!-- Header row: customer name + status -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvHistName"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Customer Name"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvHistStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="12sp"
            android:padding="15dp"
            android:background="@drawable/button_light_green"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- Address -->
    <TextView
        android:id="@+id/tvHistAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address here"
        android:layout_marginTop="6dp"
        android:textColor="@android:color/black" />

    <!-- Date + Time -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp">

        <TextView
            android:id="@+id/tvHistDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/01/2025" />

        <TextView
            android:id="@+id/tvHistTime"
            android:layout_marginStart="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00" />
    </LinearLayout>

    <!-- Units summary -->
    <TextView
        android:id="@+id/tvHistUnits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1 Unit"
        android:layout_marginTop="8dp" />

    <!-- Action buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <FrameLayout
            android:id="@+id/btnEditRequest"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:background="@drawable/login_button"
            android:padding="8dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textColor="@android:color/black"
                android:layout_gravity="center"
                android:textStyle="bold"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/btnChangeSchedule"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:background="@drawable/login_button"
            android:padding="8dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reschedule"
                android:textColor="@android:color/black"
                android:layout_gravity="center"
                android:textStyle="bold"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/btnCancelRequest"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:background="@drawable/login_button"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textColor="@android:color/black"
                android:layout_gravity="center"
                android:textStyle="bold"/>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>
