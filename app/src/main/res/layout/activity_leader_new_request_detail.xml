<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- BACKGROUND -->
    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bglogin_pelanggan" />

    <!-- CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- TITLE -->
            <TextView
                android:id="@+id/tvPageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Request Details"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="16dp" />

            <!-- DETAILS CARD -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dialog_background"
                android:padding="18dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDetailName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer Name"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDetailPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/tvDetailAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:layout_marginTop="4dp" />

                <!-- DATE + MAP IN SAME ROW -->
                <LinearLayout
                    android:id="@+id/dateRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvDetailDateTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Date â€¢ Time"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/btnDetailMap"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:src="@drawable/maps_logo"
                        android:layout_marginStart="10dp" />
                </LinearLayout>

            </LinearLayout>

            <!-- Units Title -->
            <TextView
                android:id="@+id/tvUnitsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Units"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="18dp" />

            <!-- Units List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDetailUnits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />

            <!-- APPROVE + REJECT BUTTONS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp">

                <TextView
                    android:id="@+id/btnDetailApprove"
                    android:layout_width="0dp"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:background="@drawable/login_button"
                    android:gravity="center"
                    android:text="Approve"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:paddingBottom="7dp" />

                <TextView
                    android:id="@+id/btnDetailReject"
                    android:layout_width="0dp"
                    android:layout_height="54dp"
                    android:layout_marginStart="14dp"
                    android:layout_weight="1"
                    android:background="@drawable/login_button"
                    android:gravity="center"
                    android:text="Reject"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:paddingBottom="7dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
