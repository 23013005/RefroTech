<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <!-- Card Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_background"
        android:padding="16dp"
        android:orientation="vertical">

        <!-- Top Row: Customer + Edit Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Customer Name -->
            <TextView
                android:id="@+id/tvScheduleCustomer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Customer Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <!-- EDIT BUTTON -->
            <ImageView
                android:id="@+id/btnEditSchedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:src="@drawable/ic_edit"
                android:contentDescription="Edit Schedule"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <!-- Date + Time -->
        <TextView
            android:id="@+id/tvScheduleTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025-11-17 â€¢ 14:00"
            android:layout_marginTop="6dp"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <!-- Assigned Technicians -->
        <TextView
            android:id="@+id/tvScheduleTechnicians"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teknisi: John, Michael"
            android:layout_marginTop="6dp"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <!-- Address -->
        <TextView
            android:id="@+id/tvScheduleAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address: Jl. Samrat 10"
            android:layout_marginTop="6dp"
            android:textSize="14sp"
            android:textColor="@android:color/black" />

    </LinearLayout>

</LinearLayout>
