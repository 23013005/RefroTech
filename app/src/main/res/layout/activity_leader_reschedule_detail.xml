<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- FULL BACKGROUND -->
    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bglogin_pelanggan" />

    <!-- PAGE CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- TITLE / TOP PART (RESTORED) -->
            <TextView
                android:id="@+id/tvPageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reschedule Request Details"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="16dp" />

            <!-- DETAILS CARD -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dialog_background"
                android:padding="18dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDetailName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer Name"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvDetailPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/tvDetailAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:layout_marginTop="4dp" />

                <!-- OLD VS NEW -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">

                    <!-- OLD -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Old Schedule"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvOldDate"
                            android:text="Old Date"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:id="@+id/tvOldTime"
                            android:text="Old Time" />
                    </LinearLayout>

                    <!-- NEW -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginStart="20dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="New Schedule"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvNewDate"
                            android:text="New Date"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:id="@+id/tvNewTime"
                            android:text="New Time" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/btnDetailMap"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="14dp"
                    android:src="@drawable/maps_logo" />
            </LinearLayout>

            <!-- Units Title -->
            <TextView
                android:id="@+id/tvUnitsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Units"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="18dp" />

            <!-- Units List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDetailUnits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />

            <!-- APPROVE & REJECT BUTTONS -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp">

                <!-- APPROVE BUTTON -->
                <TextView
                    android:id="@+id/btnDetailApprove"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:background="@drawable/login_button"
                    android:gravity="center"
                    android:text="Approve"
                    android:textStyle="bold"
                    android:paddingBottom="7dp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <!-- REJECT BUTTON -->
                <TextView
                    android:id="@+id/btnDetailReject"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:layout_marginStart="14dp"
                    android:background="@drawable/login_button"
                    android:gravity="center"
                    android:text="Reject"
                    android:paddingBottom="7dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
