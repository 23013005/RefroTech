<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- FULL PAGE BACKGROUND -->
    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bglogin_pelanggan" />

    <!-- CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- TITLE -->
            <TextView
                android:id="@+id/tvPageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Request Details"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_marginBottom="16dp"
                android:textColor="@android:color/black"/>

            <!-- DETAILS CARD -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dialog_background"
                android:padding="18dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDetailName"
                    android:text="Customer Name"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvDetailPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/tvDetailAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/tvDetailDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date â€¢ Time"
                    android:layout_marginTop="6dp" />

                <ImageView
                    android:id="@+id/btnDetailMap"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/maps_logo" />
            </LinearLayout>

            <!-- Units Title -->
            <TextView
                android:id="@+id/tvUnitsTitle"
                android:text="Units"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Units List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDetailUnits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp">

                <!-- APPROVE BUTTON -->
                <TextView
                    android:id="@+id/btnDetailApprove"
                    android:layout_width="0dp"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:background="@drawable/login_button"
                    android:gravity="center"
                    android:text="Approve"
                    android:paddingBottom="7dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"/>

                <!-- REJECT BUTTON -->
                <TextView
                    android:id="@+id/btnDetailReject"
                    android:layout_width="0dp"
                    android:layout_height="54dp"
                    android:layout_marginStart="14dp"
                    android:layout_weight="1"
                    android:background="@drawable/login_button"
                    android:gravity="center"
                    android:paddingBottom="7dp"
                    android:text="Reject"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
