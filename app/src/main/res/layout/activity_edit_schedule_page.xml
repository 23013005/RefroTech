<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bglogin_pelanggan"
    tools:context=".EditSchedulePage">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="50dp">

        <!-- HEADER LOGO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/refro_logo2"
                android:contentDescription="Logo"/>
        </LinearLayout>

        <!-- PAGE TITLE -->
        <TextView
            android:id="@+id/editScheduleTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Jadwal"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/inter_bold" />

        <!-- TIME -->
        <EditText
            android:id="@+id/etTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/input_box_login"
            android:hint="Waktu"
            android:inputType="none"
            android:focusable="false"
            android:clickable="true"
            android:padding="14dp"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- TECHNICIAN -->
        <EditText
            android:id="@+id/etTechnician"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_box_login"
            android:hint="Nama Teknisi"
            android:inputType="none"
            android:focusable="false"
            android:clickable="true"
            android:padding="14dp"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- CUSTOMER -->
        <EditText
            android:id="@+id/etCustomer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_box_login"
            android:hint="Nama Pelanggan"
            android:padding="14dp"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- ADDRESS -->
        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_box_login"
            android:hint="Alamat Pekerjaan"
            android:padding="14dp"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- UNITS LABEL -->
        <TextView
            android:id="@+id/tvUnitsLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Units"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_bold"
            android:layout_marginTop="25dp"
            android:layout_marginStart="40dp" />

        <!-- RECYCLER UNITS -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerUnits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="12dp"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never" />

        <!-- ADD UNIT BUTTON -->
        <FrameLayout
            android:id="@+id/btnAddUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="120dp"
            android:background="@drawable/login_button"
            android:paddingVertical="10dp"
            android:paddingHorizontal="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tambah Unit"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/inter_bold" />
        </FrameLayout>

        <!-- BUTTONS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:paddingHorizontal="40dp">

            <!-- SAVE -->
            <FrameLayout
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_button"
                android:paddingHorizontal="50dp"
                android:paddingVertical="14dp"
                android:layout_marginEnd="20dp" />

            <!-- DELETE -->
            <FrameLayout
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/delete_button"
                android:paddingHorizontal="50dp"
                android:paddingVertical="14dp"
                android:layout_marginStart="20dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
