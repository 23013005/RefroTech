<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="14dp"
    android:layout_marginVertical="6dp"
    android:gravity="center_vertical"
    android:background="@drawable/input_box_login">

    <!-- LEFT: Technician Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/tvTechnicianName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Teknisi"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/inter_bold" />

        <TextView
            android:id="@+id/tvTechnicianUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username_teknisi"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tvTechnicianPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="password123"
            android:textSize="14sp"
            android:layout_marginTop="2dp" />
    </LinearLayout>

    <!-- RIGHT: Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- EDIT BUTTON -->
        <FrameLayout
            android:id="@+id/btnEditTech"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:background="@drawable/login_button"
            android:backgroundTint="#A0FF95"
            android:paddingVertical="6dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="4dp"
                android:text="Edit"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </FrameLayout>

        <!-- DELETE BUTTON -->
        <FrameLayout
            android:id="@+id/btnDeleteTech"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@drawable/login_button"
            android:backgroundTint="#FF8C8C"
            android:paddingVertical="6dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="4dp"
                android:text="Hapus"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
