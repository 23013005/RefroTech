<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="12dp"
    android:background="@drawable/input_box_login"
    android:layout_marginBottom="10dp">

    <!-- Text Info Column -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvMerkAC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Merk AC:"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/inter_bold"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/tvJumlahPK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah PK:"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/inter_bold"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/tvJenisPekerjaan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Pekerjaan:"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/inter_bold" />
    </LinearLayout>

    <!-- Unit Number -->
    <TextView
        android:id="@+id/tvUnitNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#1"
        android:textColor="@color/black"
        android:paddingRight="20dp"
        android:textSize="25sp"
        android:fontFamily="@font/inter_bold"
        android:layout_marginStart="16dp"/>
</LinearLayout>
