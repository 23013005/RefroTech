<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="12dp"
    android:background="@drawable/input_box_login"
    android:layout_marginBottom="10dp">

    <!-- ===== Text Info Column ===== -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvMerkAC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Merk AC: Panasonic"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/inter_bold"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/tvJumlahPK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah PK: 1"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/inter_bold"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/tvJenisPekerjaan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Pekerjaan: Service"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/inter_bold" />
    </LinearLayout>

    <!-- ===== Delete Icon ===== -->
    <ImageView
        android:id="@+id/btnDeleteUnit"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_delete"
        android:contentDescription="Delete Unit"
        android:padding="4dp"
        android:layout_marginStart="8dp" />
</LinearLayout>
